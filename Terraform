#creating an ec2 instance using terraform
#aws configure(configure the aws cli)
#create a tf file and write infrastructure as a code

provider "aws" {
  region = "us-east-1" 
}

resource "aws_instance" "my_instance" {
  ami   = "ami-0440d3b780d96b29d"  
  instance_type = "t2.micro"             
tags = {
"name" = "MyEC2Instance"
    }
}   

#terraform init
#terraform validate
#terraform plan
#terraform apply

